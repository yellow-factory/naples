{
  "@@locale": "es",

  "required": "El campo es obligatorio.",
  "@required": {
    "description": "Validator<T>.required"
  },
  
  "stringRequired": "Introduce un texto.",
  "@stringRequired": {
    "description": "StringValidator.required"
  },

  "stringMaxLength": "El texto no puede tener más de {max} carácteres.",
  "@stringMaxLength": {
    "description": "StringValidator.maxLength",
    "placeholders": {
      "max": {
        "type": "int",
        "format": "compact",
        "example": "8"
      }
    }
  },

  "stringMinLength": "El texto no puede tener menos de {min} carácteres.",
  "@stringMinLength": {
    "description": "StringValidator.minLength",
    "placeholders": {
      "min": {
        "type": "int",
        "format": "compact",
        "example": "8"
      }
    }
  },

  "stringRegularExpression": "El texto no cumple con la expresión regular {expression}",
  "@stringRegularExpression": {
    "description": "StringValidator.regularExpression",
    "placeholders": {
      "expression": {
        "type": "String",
        "example": "[0-9]+"
      }
    }
  },

  "numberRequired": "Introduce un número diferente de cero.",
  "@numberRequired": {
    "description": "NumberValidator.required"
  }  
}